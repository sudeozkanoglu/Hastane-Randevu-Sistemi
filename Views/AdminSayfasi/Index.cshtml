<head>
	<style>
		.btn:hover{
			color: #F2F2F2;
		}

		.bg-img {
			background-image: url('/images/ilac.jpg') !important;
			background-size: cover;
			background-position: center;
			background-repeat: no-repeat;
		}

		.bg-img::before {
			background-color: rgba(0,0,0,0.6);
			content: "";
			position: absolute;
			top: 0;
			right: 0;
			bottom: 0;
			left: 0;
		}

		.hero-section .container {
			height: 170vh;
			z-index: 1;
			position: relative;
			margin-top: 15%;
		}

		.hero-section h1 {
			font-size: 1.8rem;
			color: white;
		}

		.card{
			position: absolute;
			width:85vh;
			height: 45vh;
			transform-style: preserve-3d;
			transition: all 0.5s ease;
			margin-bottom: 10%;
			background: rgba(255, 255, 255, 0.2);
			border: 1px solid rgba(255,255,255, 0.3 );
			box-shadow: 0 4px 30px rgba(0,0,0,0.1);
		}

		.card:hover{
			transform: rotateY(180deg);
		}

		.front{
			position: absolute;
			width: 100%;
			height: 100%;
			backface-visibility: hidden;
			color: black;
			text-align: center;
		}

		.back{
			position: absolute;
			width: 100%;
			height: 100%;
			backface-visibility: hidden;
			color: black;
			text-align: center;
			transform: rotateY(180deg);
		}

		.row{
			padding-bottom: 30% !important;
		}

		.card-text{
			text-align: center;
			margin-top: 10%;
		}

		.card-footer{
			margin-top: 10%;
		}
	</style>
</head>
