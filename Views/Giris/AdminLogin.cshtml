@model AdminLogin
<head>
    <style>
        .bg-img{
			background-image: url('/images/yonetici.jpg') !important;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .bg-img::before {
            background-color: rgba(0,0,0,0.6);
            content: "";
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
        }

        .hero-section .container {
            height: 100vh;
            z-index: 1;
            position: relative;
            margin-top: 15%;
        }

        .hero-section h1 {
            font-size: 1.8rem;
            color:white;
        }
    </style>
</head>
<body class="bg-img">
    <section class="hero-section">
        @if (Context.Session.GetString("SessionAdmin") is null)
        {
            <div class="container">
                <div class="row ">
                    <div class="col-4 offset-4">
                        <h1>Yönetici Paneli Giriş Sayfası</h1>
                        <hr class="text-white" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 offset-4">
                        <form action="\Giris\AdminLogin" method="post">
                            <div class="form-group mt-3">
                                <label asp-for="KullaniciAdi" class="form-label" style="color:white">Kullanıcı Adı</label>
                                <input asp-for="KullaniciAdi" class="form-control" type="email" />
                                <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Sifre" class="form-label" style="color:white">Şifre</label>
                                <input asp-for="Sifre" class="form-control" type="password" />
                                <span asp-validation-for="Sifre" class="text-danger"></span>
                            </div>
                            <div class="form-group d-grid mt-3">
                                <button type="submit" class="btn d-block" style="background-color:#B96028; color:white">Giriş Yap</button>
                            </div>
                        </form>
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-4">
                    </div>
                    <div class="col-4">
                        <a type="button" asp-area="" asp-controller="Home" asp-action="Index" class="btn mx-auto d-grid gap-2" style="background-color:#A3AB78; color:white">Önceki Sayfaya Dön</a>
                    </div>
                    <div class="col-4">
                    </div>
                </div>
                <br />
                <br />
            </div>

        }
        else
        {
            <h2>Giriş Yapıldı</h2>
        }
    </section>
   
</body>

