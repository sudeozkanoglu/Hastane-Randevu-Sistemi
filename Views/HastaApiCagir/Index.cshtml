@model IEnumerable<webProjeOdev8.Models.Hasta>

@{
    ViewData["Title"] = "Index";
}
@{
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.hastaTC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hastaAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hastaSoyadi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dogumTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cinsiyet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.medeniHal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefonNumarasi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hastaSifre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.hastaTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hastaAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hastaSoyadi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dogumTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cinsiyet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.medeniHal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefonNumarasi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hastaSifre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.hastaId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.hastaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
